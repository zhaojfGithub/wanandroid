<resources>
    <!-- Base application theme. -->
    <style name="Theme.Wanandroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/blue_500</item>
        <!-- appbar背景色，应用的主要色调，actionBar默认使用此颜色 -->
        <item name="colorPrimary">@color/blue_500</item>
        <!--colorPrimary的对比色-->
        <item name="colorOnPrimary">@color/orange_500</item>
        <!--app次级颜色，通常作为主色的补充色-->
        <item name="colorSecondary">@color/blue_200</item>
        <!--colorSecondary的对比色-->
        <item name="colorOnSecondary">@color/orange_200</item>
        <!--组件界面（卡片，表格，菜单等）的颜色-->
        <item name="colorSurface">@color/blue_400</item>
        <!--colorSurface的对比色-->
        <item name="colorOnSurface">@color/orange_400</item>
        <!--错误信息-->
        <item name="colorError">@color/black</item>

        <item name="backgroundColor">@color/white</item>
        <item name="colorOnBackground">@color/blue_200</item>

        <item name="android:textColorPrimary">@color/text_initial</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="ButtonAlpha" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <!---->
    <style name="baseDialog">
        <!--对话框背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--边框 -->
        <item name="android:windowFrame">@null</item>
        <!--没有标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 是否浮现在Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!--背景透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 是否有覆盖 -->
        <item name="android:windowContentOverlay">@null</item>
        <!--背景变暗-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!--SplashScreen适配-->
    <style name="Theme.App.Starting" parent="Theme.SplashScreen.IconBackground">
        <!--启动背景-->
        <item name="windowSplashScreenBackground">@color/white</item>
        <!--中间图标-->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo_foreground</item>
        <!--在图标下添加背景颜色-->
        <item name="windowSplashScreenIconBackgroundColor">@color/gray</item>
        <!--启动时间-->
        <item name="windowSplashScreenAnimationDuration">200</item>
        <!--设置主题，跟随设置的主题-->
        <item name="postSplashScreenTheme">@style/Theme.Wanandroid</item>
    </style>
</resources>