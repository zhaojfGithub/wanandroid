<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Blue.Wanandroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/blue_500</item>
        <!-- appbar背景色，应用的主要色调，actionBar默认使用此颜色 -->
        <item name="colorPrimary">@color/blue_500</item>
        <!--colorPrimary的对比色-->
        <item name="colorOnPrimary">@color/orange_500</item>
        <!--app次级颜色，通常作为主色的补充色-->
        <item name="colorSecondary">@color/blue_200</item>
        <!--colorSecondary的对比色-->
        <item name="colorOnSecondary">@color/orange_200</item>
        <!--组件界面（卡片，表格，菜单等）的颜色-->
        <item name="colorSurface">@color/blue_400</item>
        <!--colorSurface的对比色-->
        <item name="colorOnSurface">@color/orange_400</item>
        <!--错误信息-->
        <item name="colorError">@color/black</item>

        <item name="backgroundColor">@color/white</item>
        <item name="colorOnBackground">@color/blue_200</item>

        <item name="android:textColorPrimary">@color/text_initial</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!--启动背景-->
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <!--中间图标-->
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_logo</item>
        <!--在图标下添加背景颜色-->
        <item name="android:windowSplashScreenIconBackgroundColor">@color/gray</item>
        <!--启动时间-->
        <item name="android:windowSplashScreenAnimationDuration">200</item>

    </style>
</resources>