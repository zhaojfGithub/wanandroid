<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!--启动背景-->
        <item name="android:windowSplashScreenBackground">@color/white</item>
        <!--中间图标-->
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_logo</item>
        <!--在图标下添加背景颜色-->
        <item name="android:windowSplashScreenIconBackgroundColor">@color/gray</item>
        <!--启动时间-->
        <item name="android:windowSplashScreenAnimationDuration">200</item>

    </style>
</resources>