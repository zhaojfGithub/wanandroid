<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Blue.Wanandroid" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/blue_500</item>
        <!-- appbar背景色，应用的主要色调，actionBar默认使用此颜色 -->
        <item name="colorPrimary">@color/blue_500</item>
        <!--colorPrimary的对比色-->
        <item name="colorOnPrimary">@color/orange_500</item>
        <!--app次级颜色，通常作为主色的补充色-->
        <item name="colorSecondary">@color/blue_200</item>
        <!--colorSecondary的对比色-->
        <item name="colorOnSecondary">@color/orange_200</item>
        <!--组件界面（卡片，表格，菜单等）的颜色-->
        <item name="colorSurface">@color/blue_400</item>
        <!--colorSurface的对比色-->
        <item name="colorOnSurface">@color/orange_400</item>
        <!--错误信息-->
        <item name="colorError">@color/black</item>

        <item name="backgroundColor">@color/white</item>
        <item name="colorOnBackground">@color/blue_200</item>

        <item name="android:textColorPrimary">@color/text_initial</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>
</resources>